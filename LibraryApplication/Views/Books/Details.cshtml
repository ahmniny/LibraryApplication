@model Book

@{
    ViewData["Title"] = Model.Title;
}

<div class="row justify-content-between mt-60-px">
    <div class="col-md-3">
        <img src="data:image/*;base64,@(Convert.ToBase64String(Model.Cover))" class="img-thumbnail" alt="@Model.Title" />
    </div>
    <div class="col-md-7">
        <div class="d-flex justify-content-between mb-3">
            <h3>@Model.Title</h3>
            <span class="mt-2">
            </span>
        </div>
        <span class="text-muted mr-3">
            <i class="bi bi-calendar-week"></i>
            @Model.Year
        </span>
        <span class="text-muted">
            <i class="bi bi-book"></i>
            @Model.Category.Name
        </span>
        <p class="text-justify mt-3">@Model.Description</p>
    </div>
</div>